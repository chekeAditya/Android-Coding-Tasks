<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.OnDetailsFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/back_button"
            android:layout_width="42dp"
            android:layout_margin="20sp"
            app:cardCornerRadius="100dp"
            android:layout_height="42dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#424242">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_centerInParent="true"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/ivImageDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvCardSource"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="64dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="sdvkamsmvklmaklmvbmamlkdfblmadmmfbdzmlmflbm"
            android:textColor="@color/light_white"
            android:textSize="29sp" />


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto"
            android:text="sdvkamsmvklmaklmvbmamlkdfblmadmasdfsdvasdvasdvasdvasdvmfbdzmlmflbm"
            android:textColor="#bababa"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tvCardSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvDescription"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_mono"
            android:text="CNN"
            android:textColor="@color/light_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_slab"
            android:text="publisthed at"
            android:textColor="@color/light_white"
            android:textSize="20sp" />


    </RelativeLayout>
</layout>
